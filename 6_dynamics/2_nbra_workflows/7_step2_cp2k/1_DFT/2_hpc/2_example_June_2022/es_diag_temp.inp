&FORCE_EVAL
  &DFT
    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME GTH_POTENTIALS
    !WFN_RESTART_FILE_NAME Si_QD_xtb-RESTART.wfn

    &XC
      !&XC_FUNCTIONAL PBE
      !&END XC_FUNCTIONAL
 
      !&XC_FUNCTIONAL
      !  &GGA_X_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !  &GGA_C_PBE .TRUE.
      !    SCALE 1.0
      !  &END
      !&END 

      &XC_FUNCTIONAL
        &BEEF .TRUE.
        &END
      &END

    &END XC

    &PRINT
    &MULLIKEN OFF
      &END
      &HIRSHFELD OFF
      &END
      &MO ON
        FILENAME adamantane
        EIGENVECTORS F
        EIGENVALUES F
        NDIGITS 8
      &END
      &PDOS
        APPEND T
        COMPONENTS T
        FILENAME adamantane
      &END
      &MO_MOLDEN ON
        FILENAME
        NDIGITS 8
        GTO_KIND SPHERICAL
      &END
      &MO_CUBES
        NHOMO 1
        NLUMO 1
        STRIDE 3 3 3
        WRITE_CUBE T
      &END
    &END PRINT
 

    &QS
      METHOD GPW

!      &DISTRIBUTION
!        BASIC_OPTIMIZATION .FALSE.
!        BASIC_SPATIAL_OPTIMIZATION .TRUE.
!      &END
    &END QS

    &POISSON
      POISSON_SOLVER PERIODIC
      PERIODIC XYZ
    &END

    &MGRID
      CUTOFF 300
      NGRIDS 12
    &END

    &SCF
      &DIAGONALIZATION ON
      &END DIAGONALIZATION
      &MIXING
        ALPHA 0.3
        METHOD BROYDEN_MIXING
        NBROYDEN 8
      &END MIXING
      SCF_GUESS ATOMIC 
      EPS_SCF 1.e-6
      ADDED_MOS 30
!      &OT
!         PRECONDITIONER FULL_SINGLE_INVERSE
!         MINIMIZER DIIS
!      &END
!      &OUTER_SCF
!         MAX_SCF  30
!         EPS_SCF 1.e-8
!      &END
      MAX_SCF  30
    &END SCF
  &END DFT

  &SUBSYS
    &CELL
      A 20.000000000000000 0.0000000000000000 0.0000000000000000
      B 0.0000000000000000 20.000000000000000 0.0000000000000000
      C 0.0000000000000000 0.0000000000000000 20.000000000000000
      PERIODIC XYZ
    &END CELL

    &TOPOLOGY
      COORD_FILE_NAME coord.xyz 
      COORD_FILE_FORMAT XYZ
      &CENTER_COORDINATES T
      &END
    &END



    &KIND C
      ELEMENT C
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      ELEMENT H
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND  N
     ELEMENT N
     BASIS_SET DZVP-MOLOPT-GTH
     POTENTIAL GTH-PBE-q5
    &END KIND
    &KIND  F
     ELEMENT F
     BASIS_SET DZVP-MOLOPT-GTH
     POTENTIAL GTH-PBE-q7
    &END KIND


   &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PROJECT adamantane
  RUN_TYPE Energy
  PRINT_LEVEL Medium
&END GLOBAL

